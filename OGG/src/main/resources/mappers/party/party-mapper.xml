<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.project.ogg.party.model.mapper.PartyMapper">

	<resultMap type="Party" id="partyListResultMap">
		<id property="p_no" column="P_NO"/>
		<result property="ott_class" column="OTT_CLASS"/>
		<result property="ott_no" column="OTT_NO"/>
		<result property="p_share_id" column="P_SHARE_ID"/>
		<result property="p_share_pwd" column="P_SHARE_PWD"/>
		<result property="p_max_member" column="P_MAX_MEMBER"/>
		<result property="p_cur_member" column="P_CUR_MEMBER"/>
		<result property="p_start_date" column="P_START_DATE"/>
		<result property="p_period" column="P_PERIOD"/>
		<result property="p_end_date" column="P_END_DATE"/>
		<result property="p_comment" column="P_COMMENT"/>
		<result property="p_entry_price" column="P_ENTRY_PRICE"/>
		<result property="p_status" column="P_STATUS"/>
		<result property="p_caution1" column="P_CAUTION1"/>
		<result property="p_caution2" column="P_CAUTION2"/>
		<result property="p_caution3" column="P_CAUTION3"/>
	</resultMap>
	
	<resultMap type="Ott" id="ottListResultMap">
		<id property="ott_no" column="OTT_NO"/>
		<result property="ott_name" column="OTT_NAME"/>
		<result property="ott_thumb" column="OTT_THUMB"/>
		<result property="ott_class" column="OTT_CLASS"/>
		<result property="ott_max_member" column="OTT_MAX_MEMBER"/>
		<result property="plan_price_output" column="PLAN_PRICE_OUTPUT"/>
		<result property="ott_status" column="OTT_STATUS"/>
	</resultMap>
	
	<resultMap type="Plan" id="ottPlanResultMap">
		<id property="plan_no" column="PLAN_NO"/>
		<result property="plan_price" column="PLAN_PRICE"/>
		<result property="ott_no" column="OTT_NO"/>
		<result property="ott_name" column="OTT_NAME"/>
		<result property="plan_name" column="PLAN_NAME"/>
		<result property="ott_max_member" column="OTT_MAX_MEMBER"/>
		<result property="plan_price_output" column="PLAN_PRICE_OUTPUT"/>
		<result property="ott_thumb" column="OTT_THUMB"/>
	</resultMap>
	
	<select id="selectOttList" resultMap="ottListResultMap">
		SELECT I.OTT_NO,
			   I.OTT_NAME,
			   I.OTT_THUMB,
			   I.OTT_CLASS,
			   I.OTT_MAX_MEMBER,
			   P.PLAN_PRICE_OUTPUT,
			   I.OTT_STATUS
		FROM OTT_INFO I
		JOIN PLAN P ON(I.OTT_NO = P.OTT_NO)
	</select>
	
	<select id="selectPlanList" resultMap="ottPlanResultMap">
		SELECT P.PLAN_NO,
			   P.PLAN_PRICE,
			   P.PLAN_PRICE_OUTPUT,
			   P.OTT_NO,
			   P.PLAN_NAME,
			   O.OTT_NAME,
			   O.OTT_MAX_MEMBER,
			   O.OTT_THUMB
		FROM PLAN P
		JOIN OTT_INFO O ON(P.OTT_NO = O.OTT_NO)
		WHERE P.OTT_NO = #{ottNo}
	</select>
	
	<select id="selectPlan" resultMap="ottPlanResultMap">
		SELECT PLAN_NAME,
			   PLAN_NO
		FROM PLAN
		WHERE PLAN_NO=#{planNo}
	</select>

	<select id="selectOttInfo" resultMap="ottPlanResultMap">
		SELECT P.PLAN_NAME,
			   P.OTT_NO,
			   O.OTT_THUMB
		FROM OTT_INFO O
		JOIN PLAN P ON(O.OTT_NO = P.OTT_NO)
		WHERE P.PLAN_NO=#{modal_plan_no}
	</select>
	
	<select id="insertParty" parameterType="Party">
		INSERT INTO PARTY(
			P_NO,
			OTT_NO,
			P_SHARE_ID,
			P_SHARE_PWD,
			P_MAX_MEMBER,
			P_START_DATE,
			P_END_DATE
		)
		VALUES(
			SEQ_PARTY_NO.NEXTVAL,
			#{ott_no},
			#{p_share_id},
			#{p_share_pwd},
			#{p_max_member},
			#{p_start_date},
			#{p_end_date}
		)
	</select>
	
	
	
	
</mapper>